# Environment Configuration for ChatBox Service

# Server Configuration
PORT=3007
NODE_ENV=development
SERVICE_NAME=chatbox-service

# Dialogflow Configuration
GOOGLE_PROJECT_ID=smartbuy-chatbot
DIALOGFLOW_LANGUAGE_CODE=vi

# Google Cloud Authentication
# Download service account key from Google Cloud Console
# Place the JSON file in chatbox-service/config/
GOOGLE_APPLICATION_CREDENTIALS=./config/dialogflow-key.json

# API Gateway & Services URLs
API_GATEWAY_URL=http://localhost:3000
PRODUCT_SERVICE_URL=http://localhost:3004
ORDER_SERVICE_URL=http://localhost:3005
USER_SERVICE_URL=http://localhost:3003

# Webhook Configuration
WEBHOOK_URL=https://your-domain.com/webhook
# For development, use ngrok: https://abc123.ngrok.io/webhook

# Session Configuration
SESSION_TIMEOUT=3600000
# 1 hour = 3600000 ms

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes = 900000 ms
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
# Options: error, warn, info, debug

# Cache Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
CACHE_TTL=300
# 5 minutes = 300 seconds

# Security
WEBHOOK_SECRET=your-webhook-secret-key-here
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# Features Toggle
ENABLE_SUGGESTION_CHIPS=true
ENABLE_RICH_RESPONSES=true
ENABLE_ANALYTICS=false
